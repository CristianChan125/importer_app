
<div class="container mt-5 bg-light p-4 rounded">
  <h2>Importar archivo CSV (delimitado por tabs)</h2>

  <%= form_with url: imports_path, local: true, multipart: true do |f| %>
    <div class="mb-3 row">
        <%= f.label :file, "Selecciona el archivo", class: "col-sm-2 col-form-label" %>
      
        <div class="col-sm-6">
            <%= f.file_field :file, class: "form-control" %>
        </div>
        <div class="col-sm-2">
            <%= f.submit "Subir", class: "btn btn-primary" %>
        </div>
    </div>
  <% end %>

  <div class="card">
    <div class="card-header">
        <h6 class="card-title m-2 text-muted">Listado de ventas</h6>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Cliente</th>
                    <th>Descripci√≥n</th>
                    <th>Precio</th>
                    <th>Piezas</th>
                    <th>Nombre del vendedor</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% @ventas.each do |p| %>
                    <tr>
                    <td><%= p.cliente.nombre %></td>
                    <td><%= p.descripcion_item %></td>
                    <td><%= number_to_currency(p.precio_item) %></td>
                    <td><%= p.total_items %></td>
                    <td><%= p.vendedor.nombre %></td>
                    <td><%= number_to_currency(p.total_items*p.precio_item) %></td>
                    </tr>
                <% end %>
            </tbody>
            <tfoot>
                <tr class="table-success">
                    <td colspan="5" class="text-end"><strong>Total de ventas:</strong></td>
                    <td><strong><%= number_to_currency(@total_venta) %></strong></td>
                </tr>
            </tfoot>
        </table>

    <div class="d-flex justify-content-center">
        <%= paginate @ventas%>
    </div>  
    </div>
  </div>

  
</div>
