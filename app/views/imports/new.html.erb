<div class="container mt-5 bg-light p-4 rounded">
  <h2>Importar archivo CSV (delimitado por tabs)</h2>

  <%= form_with url: imports_path, local: true, multipart: true do |f| %>
    <div class="mb-3">
      <%= f.label :file, "Selecciona el archivo" %>
      <%= f.file_field :file, class: "form-control" %>
      <%= f.submit "Subir", class: "btn btn-primary" %>
    </div>
  <% end %>

  <% if notice %>
    <div class="alert alert-success mt-3"><%= notice %></div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger mt-3"><%= alert %></div>
  <% end %>

  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="card-subtitle mb-2 text-muted">Listado de ventas</h6>
        <h6 class="card-subtitle mb-2 text-muted">Total de ventas: <%= @total_venta %></h6>
    </div>
    <div class="card-body">
        <table class="table table-striped">
    <thead>
      <tr>
        <th>Cliente</th>
        <th>Descripci√≥n</th>
        <th>Precio</th>
        <th>Piezas</th>
        <th>Nombre del vendedor</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @ventas.each do |p| %>
        <tr>
          <td><%= p.cliente.nombre %></td>
          <td><%= p.descripcion_item %></td>
          <td><%= number_to_currency(p.precio_item) %></td>
          <td><%= p.total_items %></td>
          <td><%= p.vendedor.nombre %></td>
          <td><%= number_to_currency(p.total_items*p.precio_item) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

    <div class="d-flex justify-content-center">
        <%= paginate @ventas%>
    </div>  
    </div>
  </div>

  
</div>
