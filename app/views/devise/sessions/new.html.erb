<div class="d-flex align-items-center justify-content-center vh-100">
  <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
    <h3 class="text-center mb-4">Iniciar Sesión</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Correo electrónico" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Contraseña" %>
      </div>

      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>

      <%= f.submit "Entrar", class: "btn btn-primary w-100" %>
    <% end %>

    <hr>

    <div class="text-center">
      <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "d-block mb-2" %>
      <%= link_to "Registrarse", new_registration_path(resource_name), class: "d-block" %>
    </div>
  </div>
</div>
